{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // 允许json导入
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      // "jest",
      "webpack-env"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "components/**/*.d.ts",
    "hook/*.ts",
    "types/*.d.ts",
    "icons/*.ts",
    "icons/*.vue",
    "index.ts"
  ],
  "exclude": ["node_modules"]
}
